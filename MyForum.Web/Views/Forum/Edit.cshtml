@model MyForum.BL.Entities.Forum

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Forum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdForum" />
            <div class="form-group">
                <label asp-for="NameForum" class="control-label"></label>
                <input asp-for="NameForum" class="form-control" />
                <span asp-validation-for="NameForum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureForum" class="control-label"></label>
                <img src="@Url.Content("~/Images/" + Model.PictureForum)" style="height:100px;width:100px;" >
                <input asp-for="PictureForum" class="form-control" type="file" name="file"/>
                <span asp-validation-for="PictureForum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

