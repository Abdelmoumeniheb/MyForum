@model IEnumerable<MyForum.BL.Entities.Forum>
@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between">
<h1>Liste of Forums</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn btn-success">Create New Forum</a>
</p>
</div>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.PictureForum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameForum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="Images/@item.PictureForum" style="height:30px;width:30px;" >
            </td>
                <td class="text-dark">
                 <a asp-action="ViewPostsForum" asp-route-id="@item.IdForum">@Html.DisplayFor(modelItem => item.NameForum)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                            <a asp-action="Edit" type="button"  class="btn btn-warning" asp-route-id="@item.IdForum">Edit</a> |
                            <a asp-action="Details" type="button" class="btn btn-primary" asp-route-id="@item.IdForum">Details</a> |
                        <a asp-action="Delete" type="button"  class="btn btn-danger" asp-route-id="@item.IdForum">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
