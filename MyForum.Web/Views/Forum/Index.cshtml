@model IEnumerable<MyForum.BL.Entities.Forum>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameForum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureForum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameForum)
            </td>
            <td>
                <img src="Images/@item.PictureForum" style="height:30px;width:30px;" >
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdForum">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdForum">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdForum">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
