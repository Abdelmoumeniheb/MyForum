@model IEnumerable<MyForum.BL.Entities.Comment>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action="Create" type="button" class="btn btn btn-success" asp-route-id="@ViewData["PostId"]">Create New Comment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datecreated)
            </th>
            <th></th>
        </tr>
    </thead>
<tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datecreated)
            </td>
            <td>
                        <a asp-action="Edit"  type="button" class="btn btn-warning" asp-route-id="@item.IdComment">Edit</a> |
                        <a asp-action="Details" type="button" class="btn btn-primary" asp-route-id="@item.IdComment">Details</a> |
                        <a asp-action="Delete" type="button"  class="btn btn-danger" asp-route-id="@item.IdComment">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
